@{
    ViewBag.Title = "主页";
}
@section styles{
    @Styles.Render("~/Content/styles/home.css")
}

@section PageHeader{
    <div class="PageBlock">
        <h1>同济二手书店</h1>
        <h3>Tongji BookStore</h3>
    </div>
    <el-button class="downbutton" type="text" v-on:click="scrollDown"><i class="fa fa-chevron-down fa-lg downicon"></i></el-button>
}

<i id="mainAnchor" class="anchor"></i>
<h1 style="text-align:center; font-size:54px;">新书上架</h1>
<h2 style="text-align:center; font-size:36px;">借出</h2>
@* 走马灯 *@
<div class="Page carousel">
    <el-carousel :interval="5000" height="76vh" type="card">
        <el-carousel-item v-for="item in newBorrowBooks">
            <img :src="item.img" class="showImg">
            <div class="showInfo">
                <h1>{{item.book_name}}</h1>
                <p>￥{{item.price}}</p>
                <span>{{item.goods_description}}</span>
            </div>
        </el-carousel-item>
    </el-carousel>
</div>
<h2 style="text-align:center; font-size:36px;">售卖</h2>
<div class="Page carousel">
    <el-carousel :interval="5000" height="76vh" type="card">
        <el-carousel-item v-for="item in newSellBooks">
            <img :src="item.img" class="showImg">
            <div class="showInfo">
                <h1>{{item.book_name}}</h1>
                <p>￥{{item.price}}</p>
                <span>{{item.goods_description}}</span>
            </div>
        </el-carousel-item>
    </el-carousel>
</div>

<div class="recommendPage" v-if="isLogin">
    <h1 style="text-align:center; font-size:54px;">推荐书单</h1>
    <el-row v-for="row in recommendCard" type="flex" justify="space-around" style="margin:20px 0;">
        <el-col :span="7" v-for="item in row">
            <el-card :body-style="{ padding: '20px'}">
                <img :src="item.img">
                <div style="padding: 14px;">
                    <h1>{{item.book_name}}</h1>
                    <p>￥{{item.price}}</p>
                    <span>{{item.goods_description}}</span>
                </div>
            </el-card>
        </el-col>
    </el-row>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/js/home.js")
}